<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.firewall-monitor" path="/org/gnome/shell/extensions/firewall-monitor/">
    

    
    <!-- Display Settings -->
    <key name="max-events" type="i">
      <default>50</default>
      <range min="10" max="200"/>
      <summary>Maximum Events</summary>
      <description>Maximum number of events to keep in history</description>
    </key>
    
    <key name="show-event-count" type="b">
      <default>true</default>
      <summary>Show Event Count</summary>
      <description>Display the number of blocked events in the panel</description>
    </key>
    
    <!-- Filter Settings -->
    <key name="show-tcp" type="b">
      <default>true</default>
      <summary>Show TCP</summary>
      <description>Display TCP connection attempts</description>
    </key>
    
    <key name="show-udp" type="b">
      <default>true</default>
      <summary>Show UDP</summary>
      <description>Display UDP connection attempts</description>
    </key>
    
    <key name="show-icmp" type="b">
      <default>true</default>
      <summary>Show ICMP</summary>
      <description>Display ICMP packets</description>
    </key>

    <key name="filter-local-discovery" type="b">
      <default>true</default>
      <summary>Filter Local Discovery</summary>
      <description>Filter out common local network discovery traffic (mDNS, IGMP)</description>
    </key>
    
  </schema>
</schemalist>
